{{#each this}}
<li class="country__item">
  <article class="card">
    <img
      src="{{flag}}"
      alt="{{name}}"
      class="card__image"
    />
    <div class="card__content">
      <h2 class="card__name">{{name}}</h2>
      <p class="card__capital">
        Capital: {{capital}} 
      </p>
      <p class="card__population">
        Population: {{population}}
      </p>
      <p class="card__languages">
        Languages:
      </p>

      <ul class="languages__list">
        {{#each languages}}
        <li class="languages__item">{{this.name}}</li>
        {{/each}}
      </ul>
    </div>    
  </article>
</li>
{{/each}}